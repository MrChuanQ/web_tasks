<p align="right"><font size=2>
  <%= link_to session[:adminname], admin_path(session[:id]) %> <A href='/main/logout'>注销<A>
</font></p>

<h1>Edit Comment</h1>

<%= form_for(@comment, url: admin_article_comment_path(@article.admin, @article, @comment)) do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@comment.errors.count, "error") %> prohibited
        this comment from being saved:
      </h2>
      <ul>
        <% @comment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>
  
  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content, size: "60x6" %>
  </p>
  
  <p>
    <%= f.label :checked %><br>
    <%= f.text_field :checked, value: true %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>

<%= link_to 'Back to Comments', admin_article_comments_path(@article.admin, @article) %>
