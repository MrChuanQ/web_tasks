<p align="right"><font size=2>
  <%= link_to session[:adminname], admin_path(session[:id]) %> <A href='/main/logout'>注销<A>
</font></p>

<h1>Edit Feedbacks</h1>

<%= form_for(@feedback) do |f| %>
  <% if @feedback.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@feedback.errors.count, "error") %> prohibited
        this feedback from being saved:
      </h2>
      <ul>
        <% @feedback.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>
  
  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content, size: "60x6" %>
  </p>
  
  <p>
    <%= f.label :checked %><br>
    <%= f.text_field :checked, value: 1 %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>

<%= link_to 'Back to Feedbacks', feedbacks_path %>
